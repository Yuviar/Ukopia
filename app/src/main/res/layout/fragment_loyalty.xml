<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/secondary">

    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:fillViewport="true">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <com.google.android.material.card.MaterialCardView
                android:id="@+id/loyaltyCard"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="16dp"
                android:layout_marginTop="24dp"
                android:layout_marginBottom="16dp"
                app:cardBackgroundColor="@color/black"
                app:cardCornerRadius="12dp"
                app:cardElevation="0dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="16dp"
                    android:background="@drawable/loyalty_card_gradient"
                    android:elevation="0dp">

                    <TextView
                        android:id="@+id/textViewLoyaltyPoints"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        tools:text="Poin: 450"
                        android:textColor="@color/white"
                        android:textSize="18sp"
                        android:textStyle="bold" />

                    <!-- Stamp Card Container -->
                    <LinearLayout
                        android:id="@+id/stampCardContainer"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:layout_marginTop="18dp"
                        android:background="@drawable/rounded_container"
                        android:padding="8dp">

                        <!-- Row 1: Stamps 1-4 and Reward 10% Disc (slot 5) -->
                        <LinearLayout
                            android:id="@+id/row1Container"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal"
                            android:weightSum="5">
                            <ImageView android:id="@+id/iv_stamp_1" style="@style/LoyaltyStampImageView" />
                            <ImageView android:id="@+id/iv_stamp_2" style="@style/LoyaltyStampImageView" />
                            <ImageView android:id="@+id/iv_stamp_3" style="@style/LoyaltyStampImageView" />
                            <ImageView android:id="@+id/iv_stamp_4" style="@style/LoyaltyStampImageView" />
                            <!-- Reward 10% Disc (slot 5) -->
                            <FrameLayout
                                android:id="@+id/container_reward_disc_10_circle"
                                android:background="@drawable/reward_circle_background_default"
                                style="@style/LoyaltyRewardCircleFrame">
                                <TextView
                                    android:id="@+id/tv_reward_disc_10_text"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_gravity="center"
                                    android:textColor="@color/black"
                                    android:textSize="12sp"
                                    android:textStyle="bold"
                                    android:text="@string/loyalty_reward_10_percent_discount_short"
                                    android:maxLines="2"
                                    android:ellipsize="end"
                                    android:gravity="center"/>
                                <ImageView
                                    android:id="@+id/iv_reward_disc_10_checkmark"
                                    android:layout_width="24dp"
                                    android:layout_height="24dp"
                                    android:layout_gravity="center"
                                    android:src="@drawable/ic_checkmark"
                                    app:tint="@color/white"
                                    android:visibility="gone"/>
                            </FrameLayout>
                        </LinearLayout>

                        <!-- Row 2: Stamps 6-9 and Reward Free Serve (slot 10) -->
                        <LinearLayout
                            android:id="@+id/row2Container"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal"
                            android:weightSum="5"
                            android:layout_marginTop="8dp">
                            <ImageView android:id="@+id/iv_stamp_6" style="@style/LoyaltyStampImageView" />
                            <ImageView android:id="@+id/iv_stamp_7" style="@style/LoyaltyStampImageView" />
                            <ImageView android:id="@+id/iv_stamp_8" style="@style/LoyaltyStampImageView" />
                            <ImageView android:id="@+id/iv_stamp_9" style="@style/LoyaltyStampImageView" />
                            <!-- Reward Free Serve (slot 10) -->
                            <FrameLayout
                                android:id="@+id/container_reward_free_serve_circle"
                                android:background="@drawable/reward_circle_background_default"
                                style="@style/LoyaltyRewardCircleFrame">
                                <TextView
                                    android:id="@+id/tv_reward_free_serve_text"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_gravity="center"
                                    android:textColor="@color/black"
                                    android:textSize="12sp"
                                    android:textStyle="bold"
                                    android:text="@string/loyalty_reward_free_serve_short"
                                    android:maxLines="2"
                                    android:ellipsize="end"
                                    android:gravity="center"/>
                                <ImageView
                                    android:id="@+id/iv_reward_free_serve_checkmark"
                                    android:layout_width="24dp"
                                    android:layout_height="24dp"
                                    android:layout_gravity="center"
                                    android:src="@drawable/ic_checkmark"
                                    app:tint="@color/white"
                                    android:visibility="gone"/>
                            </FrameLayout>
                        </LinearLayout>

                        <!-- Row 3: Stamps 11-14 and Reward Disc 10% (slot 15) -->
                        <LinearLayout
                            android:id="@+id/row3Container"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal"
                            android:weightSum="5"
                            android:layout_marginTop="8dp"
                            android:visibility="gone">
                            <ImageView android:id="@+id/iv_stamp_11" style="@style/LoyaltyStampImageView" />
                            <ImageView android:id="@+id/iv_stamp_12" style="@style/LoyaltyStampImageView" />
                            <ImageView android:id="@+id/iv_stamp_13" style="@style/LoyaltyStampImageView" />
                            <ImageView android:id="@+id/iv_stamp_14" style="@style/LoyaltyStampImageView" />
                            <!-- Reward 10% Disc (slot 15) -->
                            <FrameLayout
                                android:id="@+id/container_reward_disc_10_2_circle"
                                android:background="@drawable/reward_circle_background_default"
                                style="@style/LoyaltyRewardCircleFrame">
                                <TextView
                                    android:id="@+id/tv_reward_disc_10_2_text"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_gravity="center"
                                    android:textColor="@color/black"
                                    android:textSize="12sp"
                                    android:textStyle="bold"
                                    android:text="@string/loyalty_reward_10_percent_discount_short"
                                    android:maxLines="2"
                                    android:ellipsize="end"
                                    android:gravity="center"/>
                                <ImageView
                                    android:id="@+id/iv_reward_disc_10_2_checkmark"
                                    android:layout_width="24dp"
                                    android:layout_height="24dp"
                                    android:layout_gravity="center"
                                    android:src="@drawable/ic_checkmark"
                                    app:tint="@color/white"
                                    android:visibility="gone"/>
                            </FrameLayout>
                        </LinearLayout>

                        <!-- Row 4: Stamps 16-19 and Reward Free T-shirt (slot 20) -->
                        <LinearLayout
                            android:id="@+id/row4Container"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal"
                            android:weightSum="5"
                            android:layout_marginTop="8dp"
                            android:visibility="gone">
                            <ImageView android:id="@+id/iv_stamp_16" style="@style/LoyaltyStampImageView" />
                            <ImageView android:id="@+id/iv_stamp_17" style="@style/LoyaltyStampImageView" />
                            <ImageView android:id="@+id/iv_stamp_18" style="@style/LoyaltyStampImageView" />
                            <ImageView android:id="@+id/iv_stamp_19" style="@style/LoyaltyStampImageView" />
                            <!-- Reward Free T-shirt (slot 20) -->
                            <FrameLayout
                                android:id="@+id/container_reward_free_tshirt_circle"
                                android:background="@drawable/reward_circle_background_default"
                                style="@style/LoyaltyRewardCircleFrame">
                                <TextView
                                    android:id="@+id/tv_reward_free_tshirt_text"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_gravity="center"
                                    android:textColor="@color/black"
                                    android:textSize="12sp"
                                    android:textStyle="bold"
                                    android:text="@string/loyalty_reward_free_tshirt_short"
                                    android:maxLines="2"
                                    android:ellipsize="end"
                                    android:gravity="center"/>
                                <ImageView
                                    android:id="@+id/iv_reward_free_tshirt_checkmark"
                                    android:layout_width="24dp"
                                    android:layout_height="24dp"
                                    android:layout_gravity="center"
                                    android:src="@drawable/ic_checkmark"
                                    app:tint="@color/white"
                                    android:visibility="gone"/>
                            </FrameLayout>
                        </LinearLayout>

                    </LinearLayout>

                </LinearLayout>
            </com.google.android.material.card.MaterialCardView>

            <TextView
                android:id="@+id/textViewLoyaltyHistoryHeader"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/loyalty_history_title"
                android:textColor="@color/black"
                android:textSize="20sp"
                android:textStyle="bold"
                android:layout_marginHorizontal="16dp"
                android:layout_marginTop="24dp"
                android:layout_marginBottom="8dp" />

            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/recyclerViewLoyaltyItems"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:nestedScrollingEnabled="false"
                app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
                tools:listitem="@layout/item_loyalty_card"
                android:elevation="0dp"/>

            <LinearLayout
                android:id="@+id/placeholderContainer"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:gravity="center"
                android:paddingVertical="32dp"
                android:visibility="gone"
                android:elevation="0dp">

                <TextView
                    android:id="@+id/textViewPlaceholder"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/no_loyalty_data_placeholder"
                    android:textColor="@color/secondary"
                    android:textSize="18sp" />
            </LinearLayout>

        </LinearLayout>
    </androidx.core.widget.NestedScrollView>

    <com.google.android.material.floatingactionbutton.FloatingActionButton
        android:id="@+id/fab_add_recipe"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="16dp"
        android:src="@drawable/ic_add"
        app:backgroundTint="@color/black"
        app:tint="@color/white"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:contentDescription="@string/add_loyalty_data_desc" />

</androidx.constraintlayout.widget.ConstraintLayout>