<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/black"
    tools:context=".ui.loyalty.EditLoyaltyFragment">

    <ImageButton
        android:id="@+id/btn_back"
        android:layout_width="48dp"
        android:layout_height="48dp"
        android:layout_marginStart="8dp"
        android:background="?attr/selectableItemBackgroundBorderless"
        android:contentDescription="@string/back_button_desc"
        android:src="@drawable/ic_arrow_back"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:tint="@color/white" />

    <TextView
        android:id="@+id/tv_header_title"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginEnd="16dp"
        android:paddingVertical="16dp"
        android:text="@string/edit_loyalty_title"
    android:textColor="@color/white"
    android:textSize="16sp"
    android:textStyle="bold"
    android:gravity="left"
    app:layout_constraintBottom_toBottomOf="@+id/btn_back"
    app:layout_constraintEnd_toEndOf="parent"
    app:layout_constraintStart_toEndOf="@+id/btn_back"
    app:layout_constraintTop_toTopOf="@+id/btn_back" />

    <FrameLayout
        android:id="@+id/content_frame"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:clipToOutline="true"
        android:elevation="0dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tv_header_title">

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/secondary"
            android:elevation="0dp"
            android:padding="4dp"
            android:scrollbars="none">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <androidx.cardview.widget.CardView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    app:cardCornerRadius="16dp">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="@color/secondary"
                        android:orientation="vertical"
                        android:padding="16dp">

                        <TextView
                            android:id="@+id/textViewMenuNameLabel"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/menu_name_label"
                        android:textSize="18sp"
                        android:textStyle="bold" />

                        <TextView
                            android:id="@+id/textViewMenuNameValue"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginBottom="10dp"
                            android:padding="10dp"
                            android:background="@drawable/edit_text_border"
                            android:textColor="@color/black"
                            android:textSize="16sp"
                            tools:text="Nama Kopi/Minuman" />

                        <LinearLayout
                            android:id="@+id/linearLayoutCoffeeDetails"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="vertical"
                            android:visibility="gone">

                            <TextView
                                android:id="@+id/textViewCoffeeBeanLabel"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="@string/coffee_bean_name_label"
                            android:textSize="18sp"
                            android:textStyle="bold"
                            android:layout_marginTop="16dp"/>

                            <TextView
                                android:id="@+id/textViewCoffeeBeanValue"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginBottom="10dp"
                                android:padding="10dp"
                                android:background="@drawable/edit_text_border"
                                android:textColor="@color/black"
                                android:textSize="16sp"
                                tools:text="Nama Beans Kopi" />

                            <LinearLayout
                                android:id="@+id/layoutAroma"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="16dp"
                                android:orientation="vertical">

                                <TextView
                                    android:id="@+id/label_aroma_seekbar"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="@string/aroma_label"
                                android:textSize="18sp"
                                android:textStyle="bold"
                                android:layout_marginBottom="10dp"/>

                                <LinearLayout
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:gravity="center_vertical"
                                    android:orientation="horizontal">

                                    <TextView
                                        android:id="@+id/textViewAromaMin"
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:text="0" />

                                    <SeekBar
                                        android:id="@+id/seekBarAroma"
                                        android:layout_width="0dp"
                                        android:layout_height="wrap_content"
                                        android:layout_weight="1"
                                        android:max="5"/>

                                    <TextView
                                        android:id="@+id/textViewAromaMax"
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:text="5" />
                                </LinearLayout>

                                <TextView
                                    android:id="@+id/textViewAromaValue"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_gravity="center_horizontal"
                                    android:text="0"
                                    android:textColor="@android:color/black" />
                            </LinearLayout>

                            <LinearLayout
                                android:id="@+id/layoutSweetness"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="16dp"
                                android:orientation="vertical">

                                <TextView
                                    android:id="@+id/label_sweetness_seekbar"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="@string/sweetness_label"
                                android:textSize="18sp"
                                android:textStyle="bold"
                                android:layout_marginBottom="10dp"/>

                                <LinearLayout
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:gravity="center_vertical"
                                    android:orientation="horizontal">

                                    <TextView
                                        android:id="@+id/textViewSweetnessMin"
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:text="0" />

                                    <SeekBar
                                        android:id="@+id/seekBarSweetness"
                                        android:layout_width="0dp"
                                        android:layout_height="wrap_content"
                                        android:layout_weight="1"
                                        android:max="5"/>

                                    <TextView
                                        android:id="@+id/textViewSweetnessMax"
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:text="5"/>
                                </LinearLayout>

                                <TextView
                                    android:id="@+id/textViewSweetnessValue"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_gravity="center_horizontal"
                                    android:text="0"
                                    android:textColor="@android:color/black" />
                            </LinearLayout>

                            <LinearLayout
                                android:id="@+id/layoutAcidity"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="16dp"
                                android:orientation="vertical">

                                <TextView
                                    android:id="@+id/label_acidity_seekbar"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="@string/acidity_label"
                                android:textSize="18sp"
                                android:textStyle="bold"
                                android:layout_marginBottom="10dp"/>

                                <LinearLayout
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:gravity="center_vertical"
                                    android:orientation="horizontal">

                                    <TextView
                                        android:id="@+id/textViewAcidityMin"
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:text="0" />

                                    <SeekBar
                                        android:id="@+id/seekBarAcidity"
                                        android:layout_width="0dp"
                                        android:layout_height="wrap_content"
                                        android:layout_weight="1"
                                        android:max="5"/>

                                    <TextView
                                        android:id="@+id/textViewAcidityMax"
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:text="5" />
                                </LinearLayout>

                                <TextView
                                    android:id="@+id/textViewAcidityValue"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_gravity="center_horizontal"
                                    android:text="0"
                                    android:textColor="@android:color/black" />
                            </LinearLayout>

                            <LinearLayout
                                android:id="@+id/layoutBitterness"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="16dp"
                                android:orientation="vertical">

                                <TextView
                                    android:id="@+id/label_bitterness_seekbar"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="@string/bitterness_label"
                                android:textSize="18sp"
                                android:textStyle="bold"
                                android:layout_marginBottom="10dp"/>

                                <LinearLayout
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:gravity="center_vertical"
                                    android:orientation="horizontal">

                                    <TextView
                                        android:id="@+id/textViewBitternessMin"
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:text="0" />

                                    <SeekBar
                                        android:id="@+id/seekBarBitterness"
                                        android:layout_width="0dp"
                                        android:layout_height="wrap_content"
                                        android:layout_weight="1"
                                        android:max="5"/>

                                    <TextView
                                        android:id="@+id/textViewBitternessMax"
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:text="5" />
                                </LinearLayout>

                                <TextView
                                    android:id="@+id/textViewBitternessValue"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_gravity="center_horizontal"
                                    android:text="0"
                                    android:textColor="@android:color/black" />
                            </LinearLayout>

                            <LinearLayout
                                android:id="@+id/layoutBody"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="16dp"
                                android:orientation="vertical">

                                <TextView
                                    android:id="@+id/label_body_seekbar"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="@string/body_label"
                                android:textSize="18sp"
                                android:textStyle="bold"
                                android:layout_marginBottom="10dp"/>

                                <LinearLayout
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:gravity="center_vertical"
                                    android:orientation="horizontal">

                                    <TextView
                                        android:id="@+id/textViewBodyMin"
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:text="0" />

                                    <SeekBar
                                        android:id="@+id/seekBarBody"
                                        android:layout_width="0dp"
                                        android:layout_height="wrap_content"
                                        android:layout_weight="1"
                                        android:max="5"/>

                                    <TextView
                                        android:id="@+id/textViewBodyMax"
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:text="5" />
                                </LinearLayout>

                                <TextView
                                    android:id="@+id/textViewBodyValue"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_gravity="center_horizontal"
                                    android:text="0"
                                    android:textColor="@android:color/black" />
                            </LinearLayout>

                        </LinearLayout>

                        <LinearLayout
                            android:id="@+id/linearLayoutNonCoffeeDetails"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="vertical"
                            android:visibility="gone">

                            <TextView
                                android:id="@+id/textViewNonCoffeeItemLabel"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="@string/non_coffee_item_name_label"
                            android:textSize="18sp"
                            android:textStyle="bold"
                            android:layout_marginTop="16dp"/>

                            <TextView
                                android:id="@+id/textViewNonCoffeeItemValue"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginBottom="10dp"
                                android:padding="10dp"
                                android:background="@drawable/edit_text_border"
                                android:textColor="@color/black"
                                android:textSize="16sp"
                                tools:text="Nama Minuman Non Kopi" />
                        </LinearLayout>

                        <TextView
                            android:id="@+id/textViewDateLabel"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="16dp"
                            android:text="@string/date_prefix_title"
                        android:textSize="18sp"
                        android:textStyle="bold" />

                        <TextView
                            android:id="@+id/textViewDateValue"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginBottom="15dp"
                            android:padding="10dp"
                            android:background="@drawable/edit_text_border"
                            android:textColor="@color/black"
                            android:textSize="16sp"
                            tools:text="2023-10-26" />

                        <TextView
                            android:id="@+id/textViewCatatan"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/notes_prefix"
                        android:textSize="18sp"
                        android:textStyle="bold" />

                        <EditText
                            android:id="@+id/editTextCatatan"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginBottom="15dp"
                            android:background="@drawable/edit_text_border"
                            android:gravity="top"
                            android:hint="@string/notes_hint_optional"
                        android:inputType="textMultiLine"
                        android:lines="4"
                        android:padding="10dp"
                        android:textColor="@color/black"
                        android:textColorHint="@color/light_grey"
                        android:textSize="16sp" />

                        <Button
                            android:id="@+id/btnSave"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="20dp"
                            android:backgroundTint="@color/black"
                            android:text="@string/save_button_text"
                        android:textColor="@color/white"
                        android:textSize="16sp"
                        app:cornerRadius="8dp" />
                    </LinearLayout>
                </androidx.cardview.widget.CardView>
            </LinearLayout>
        </ScrollView>
    </FrameLayout>
</androidx.constraintlayout.widget.ConstraintLayout>