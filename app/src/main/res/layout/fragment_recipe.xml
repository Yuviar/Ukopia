<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/secondary">

        <androidx.swiperefreshlayout.widget.SwipeRefreshLayout
            android:id="@+id/swipeRefresh"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

                <androidx.core.widget.NestedScrollView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:fillViewport="true">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="vertical">

                                <LinearLayout
                                    android:id="@+id/recipeHeader"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:orientation="vertical"
                                    android:gravity="center_horizontal"
                                    android:background="@drawable/rounded_bottom_bg_black"
                                    android:elevation="0dp"
                                    android:paddingBottom="100dp">

                                        <ImageView
                                            android:layout_width="150dp"
                                            android:layout_height="150dp"
                                            android:src="@drawable/ic_book_open"
                                            app:tint="@color/white"
                                            android:contentDescription="@string/recipe_image_desc"
                                            android:layout_marginTop="-20dp"/>

                                        <TextView
                                            android:layout_width="wrap_content"
                                            android:layout_height="wrap_content"
                                            android:text="@string/coffee_recipe_title"
                                            android:textColor="@color/white"
                                            android:textSize="24sp"
                                            android:textStyle="bold"
                                            android:gravity="center"
                                            android:lineSpacingExtra="4sp"
                                            android:layout_marginBottom="20dp"
                                            android:layout_marginTop="-20dp"/>

                                        <LinearLayout
                                            android:layout_width="match_parent"
                                            android:layout_height="wrap_content"
                                            android:orientation="horizontal"
                                            android:gravity="center_vertical"
                                            android:padding="12dp"
                                            android:background="@drawable/rounded_bg_white2"
                                            android:elevation="0dp"
                                            android:layout_marginHorizontal="16dp">

                                                <ImageView
                                                    android:layout_width="24dp"
                                                    android:layout_height="24dp"
                                                    android:src="@drawable/ic_search"
                                                    app:tint="@color/black"
                                                    android:contentDescription="@string/search_icon"/>

                                                <EditText
                                                    android:id="@+id/et_search"
                                                    android:layout_width="0dp"
                                                    android:layout_height="wrap_content"
                                                    android:layout_weight="1"
                                                    android:layout_marginStart="8dp"
                                                    android:background="@android:color/transparent"
                                                    android:hint="@string/search_recipe_hint"
                                                    android:textColorHint="@color/black"
                                                    android:textColor="@color/black"
                                                    android:textSize="16sp"
                                                    android:inputType="text"
                                                    android:maxLines="1"/>

                                                <ImageView
                                                    android:id="@+id/iv_clear_search"
                                                    android:layout_width="24dp"
                                                    android:layout_height="24dp"
                                                    android:layout_marginStart="8dp"
                                                    android:src="@drawable/ic_close"
                                                    app:tint="@color/black"
                                                    android:visibility="gone" />
                                        </LinearLayout>
                                </LinearLayout>

                                <FrameLayout
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:layout_marginTop="-80dp">
                                        <androidx.recyclerview.widget.RecyclerView
                                            android:id="@+id/recyclerViewRecipe"
                                            android:layout_width="match_parent"
                                            android:layout_height="wrap_content"
                                            app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
                                            tools:listitem="@layout/item_recipe_card"
                                            android:paddingTop="10dp"
                                            android:paddingBottom="10dp"
                                            android:clipToPadding="false"
                                            android:nestedScrollingEnabled="false" />

                                        <ProgressBar
                                            android:id="@+id/progressBar"
                                            android:layout_width="wrap_content"
                                            android:layout_height="wrap_content"
                                            android:layout_gravity="center_horizontal|top"
                                            android:visibility="gone"
                                            android:indeterminateTint="@color/white"/>
                                </FrameLayout>

                        </LinearLayout>
                </androidx.core.widget.NestedScrollView>
        </androidx.swiperefreshlayout.widget.SwipeRefreshLayout>
</LinearLayout>