<?xml version="1.0" encoding="utf-8"?>
<androidx.coordinatorlayout.widget.CoordinatorLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#F5F5F5"
    tools:context=".ui.home.HomeFragment">

    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingBottom="16dp">

            <!-- NEW: User Info Header -->
            <LinearLayout
                android:id="@+id/home_user_info_header"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:paddingTop="16dp"
                android:paddingStart="16dp"
                android:paddingEnd="16dp"
                android:paddingBottom="8dp"
                android:background="@color/secondary"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent">

                <TextView
                    android:id="@+id/textViewUserName"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    tools:text="Welcome! Guest"
                    android:textColor="@color/black"
                    android:textSize="20sp"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/textViewLoyaltyPoints"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="4dp"
                    android:drawableStart="@drawable/ic_coffee_cup"
                    android:drawablePadding="4dp"
                    android:gravity="center_vertical"
                    android:textColor="@color/black"
                    android:textSize="16sp"
                    tools:text="Points: 0"
                    app:drawableTint="@color/black"/>
            </LinearLayout>

            <!-- START: Loyalty Section Container -->
            <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/loyaltySectionContainer"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                app:layout_constraintTop_toBottomOf="@id/home_user_info_header"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                android:layout_marginTop="16dp">

                <!-- Loyalty Title (hanya terlihat jika login) -->
                <TextView
                    android:id="@+id/tv_home_stamp_card_title"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Collect Stamps for Rewards!"
                    android:textColor="@color/black"
                    android:textSize="18sp"
                    android:textStyle="bold"
                    android:layout_marginStart="16dp"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    tools:ignore="HardcodedText" />

                <!-- Stamp Card (hanya terlihat jika login) -->
                <com.google.android.material.card.MaterialCardView
                    android:id="@+id/stampCardView"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="16dp"
                    android:layout_marginEnd="16dp"
                    android:layout_marginTop="8dp"
                    app:cardBackgroundColor="@color/white"
                    app:cardCornerRadius="12dp"
                    app:cardElevation="2dp"
                    app:strokeColor="#1A000000"
                    app:strokeWidth="1dp"
                    app:layout_constraintTop_toBottomOf="@id/tv_home_stamp_card_title"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintEnd_toEndOf="parent">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:paddingTop="12dp"
                        android:paddingBottom="8dp">

                        <androidx.constraintlayout.widget.ConstraintLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content">

                            <ImageButton
                                android:id="@+id/btn_prev_stamp"
                                android:layout_width="40dp"
                                android:layout_height="wrap_content"
                                android:minHeight="48dp"
                                android:background="?attr/selectableItemBackgroundBorderless"
                                android:contentDescription="Previous Stamps"
                                android:src="@drawable/ic_arrow_left"
                                app:layout_constraintBottom_toBottomOf="parent"
                                app:layout_constraintStart_toStartOf="parent"
                                app:layout_constraintTop_toTopOf="parent"
                                app:tint="@color/black" />

                            <LinearLayout
                                android:id="@+id/stamps_grid_container"
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:orientation="vertical"
                                app:layout_constraintEnd_toStartOf="@+id/btn_next_stamp"
                                app:layout_constraintStart_toEndOf="@+id/btn_prev_stamp"
                                app:layout_constraintTop_toTopOf="parent">

                                <!-- Row 1: Stamps 1-5 (atau sesuai halaman) -->
                                <LinearLayout
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:orientation="horizontal"
                                    android:weightSum="5"
                                    android:gravity="center">
                                    <!-- Setiap FrameLayout memiliki 3 elemen: background ImageView, TextView angka, dan checkmark ImageView -->
                                    <FrameLayout style="@style/StampCell" tools:tag="stamp_1">
                                        <ImageView android:id="@+id/iv_stamp_background_1" style="@style/LoyaltyStampImageView" />
                                        <TextView android:id="@+id/tv_stamp_number_1" style="@style/LoyaltyStampNumber" tools:text="1" />
                                        <ImageView android:id="@+id/iv_stamp_checkmark_1" style="@style/LoyaltyStampCheckmark" />
                                    </FrameLayout>
                                    <FrameLayout style="@style/StampCell" tools:tag="stamp_2">
                                        <ImageView android:id="@+id/iv_stamp_background_2" style="@style/LoyaltyStampImageView" />
                                        <TextView android:id="@+id/tv_stamp_number_2" style="@style/LoyaltyStampNumber" tools:text="2" />
                                        <ImageView android:id="@+id/iv_stamp_checkmark_2" style="@style/LoyaltyStampCheckmark" />
                                    </FrameLayout>
                                    <FrameLayout style="@style/StampCell" tools:tag="stamp_3">
                                        <ImageView android:id="@+id/iv_stamp_background_3" style="@style/LoyaltyStampImageView" />
                                        <TextView android:id="@+id/tv_stamp_number_3" style="@style/LoyaltyStampNumber" tools:text="3" />
                                        <ImageView android:id="@+id/iv_stamp_checkmark_3" style="@style/LoyaltyStampCheckmark" />
                                    </FrameLayout>
                                    <FrameLayout style="@style/StampCell" tools:tag="stamp_4">
                                        <ImageView android:id="@+id/iv_stamp_background_4" style="@style/LoyaltyStampImageView" />
                                        <TextView android:id="@+id/tv_stamp_number_4" style="@style/LoyaltyStampNumber" tools:text="4" />
                                        <ImageView android:id="@+id/iv_stamp_checkmark_4" style="@style/LoyaltyStampCheckmark" />
                                    </FrameLayout>
                                    <FrameLayout style="@style/StampCell" tools:tag="stamp_5">
                                        <ImageView android:id="@+id/iv_stamp_background_5" style="@style/LoyaltyStampImageView" />
                                        <TextView android:id="@+id/tv_stamp_number_5" style="@style/LoyaltyStampNumber" tools:text="5" />
                                        <ImageView android:id="@+id/iv_stamp_checkmark_5" style="@style/LoyaltyStampCheckmark" />
                                    </FrameLayout>
                                </LinearLayout>

                                <!-- Row 2: Stamps 6-10 (atau sesuai halaman) -->
                                <LinearLayout
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:orientation="horizontal"
                                    android:weightSum="5"
                                    android:gravity="center"
                                    android:layout_marginTop="8dp">
                                    <FrameLayout style="@style/StampCell" tools:tag="stamp_6">
                                        <ImageView android:id="@+id/iv_stamp_background_6" style="@style/LoyaltyStampImageView" />
                                        <TextView android:id="@+id/tv_stamp_number_6" style="@style/LoyaltyStampNumber" tools:text="6" />
                                        <ImageView android:id="@+id/iv_stamp_checkmark_6" style="@style/LoyaltyStampCheckmark" />
                                    </FrameLayout>
                                    <FrameLayout style="@style/StampCell" tools:tag="stamp_7">
                                        <ImageView android:id="@+id/iv_stamp_background_7" style="@style/LoyaltyStampImageView" />
                                        <TextView android:id="@+id/tv_stamp_number_7" style="@style/LoyaltyStampNumber" tools:text="7" />
                                        <ImageView android:id="@+id/iv_stamp_checkmark_7" style="@style/LoyaltyStampCheckmark" />
                                    </FrameLayout>
                                    <FrameLayout style="@style/StampCell" tools:tag="stamp_8">
                                        <ImageView android:id="@+id/iv_stamp_background_8" style="@style/LoyaltyStampImageView" />
                                        <TextView android:id="@+id/tv_stamp_number_8" style="@style/LoyaltyStampNumber" tools:text="8" />
                                        <ImageView android:id="@+id/iv_stamp_checkmark_8" style="@style/LoyaltyStampCheckmark" />
                                    </FrameLayout>
                                    <FrameLayout style="@style/StampCell" tools:tag="stamp_9">
                                        <ImageView android:id="@+id/iv_stamp_background_9" style="@style/LoyaltyStampImageView" />
                                        <TextView android:id="@+id/tv_stamp_number_9" style="@style/LoyaltyStampNumber" tools:text="9" />
                                        <ImageView android:id="@+id/iv_stamp_checkmark_9" style="@style/LoyaltyStampCheckmark" />
                                    </FrameLayout>
                                    <FrameLayout style="@style/StampCell" tools:tag="stamp_10">
                                        <ImageView android:id="@+id/iv_stamp_background_10" style="@style/LoyaltyStampImageView" />
                                        <TextView android:id="@+id/tv_stamp_number_10" style="@style/LoyaltyStampNumber" tools:text="10" />
                                        <ImageView android:id="@+id/iv_stamp_checkmark_10" style="@style/LoyaltyStampCheckmark" />
                                    </FrameLayout>
                                </LinearLayout>
                            </LinearLayout>

                            <ImageButton
                                android:id="@+id/btn_next_stamp"
                                android:layout_width="40dp"
                                android:layout_height="wrap_content"
                                android:minHeight="48dp"
                                android:background="?attr/selectableItemBackgroundBorderless"
                                android:contentDescription="Next Stamps"
                                android:src="@drawable/ic_arrow_right"
                                app:layout_constraintBottom_toBottomOf="parent"
                                app:layout_constraintEnd_toEndOf="parent"
                                app:layout_constraintTop_toTopOf="parent"
                                app:tint="@color/black" />

                        </androidx.constraintlayout.widget.ConstraintLayout>

                        <!-- Indikator progres stempel -->
                        <TextView
                            android:id="@+id/textViewStampProgress"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center_horizontal"
                            android:layout_marginTop="8dp"
                            android:textColor="@color/grey"
                            android:textSize="12sp"
                            tools:text="Stamps 1 - 10" />

                    </LinearLayout>


                </com.google.android.material.card.MaterialCardView>

            </androidx.constraintlayout.widget.ConstraintLayout>
            <!-- END: Loyalty Section Container -->


            <!-- NEW: Promo Card Section (judul dihapus) -->
            <com.google.android.material.card.MaterialCardView
                android:id="@+id/promoCardView"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="16dp"
                android:layout_marginEnd="16dp"
                android:layout_marginTop="24dp"
            app:cardBackgroundColor="@color/white"
            app:cardCornerRadius="12dp"
            app:cardElevation="2dp"
            app:strokeColor="#1A000000"
            app:strokeWidth="1dp"
            app:layout_constraintTop_toBottomOf="@id/loyaltySectionContainer"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent">

            <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <ImageView
                    android:id="@+id/promo_image"
                    android:layout_width="match_parent"
                    android:layout_height="180dp"
                    android:scaleType="centerCrop"
                    android:src="@drawable/sample_coffee"
                    tools:ignore="ContentDescription" />

                <TextView
                    android:id="@+id/promo_description"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="bottom"
                    android:padding="12dp"
                    android:background="@drawable/gradient_bottom_black"
                    android:textColor="@color/white"
                    android:textSize="14sp"
                    android:text="Attend the Halloween event at Ukopia Brew Sauce!\nClick for more details.."
                    tools:ignore="HardcodedText" />
            </FrameLayout>
        </com.google.android.material.card.MaterialCardView>
        <!-- END: Promo Card Section -->


        <!-- Bagian "Best Seller Menu" -->
        <TextView
            android:id="@+id/tv_best_seller_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Best Seller Menu"
            android:textColor="@color/black"
            android:textSize="20sp"
            android:textStyle="bold"
            android:layout_marginTop="24dp"
            android:layout_marginStart="16dp"
            app:layout_constraintTop_toBottomOf="@id/promoCardView"
        app:layout_constraintStart_toStartOf="parent" />

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/best_seller_recycler_view"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:layout_marginEnd="8dp"
            android:clipToPadding="false"
            android:paddingBottom="16dp"
            app:layout_constraintTop_toBottomOf="@id/tv_best_seller_title"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:orientation="horizontal"
            app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
            tools:listitem="@layout/layout_menu_item" />

    </androidx.constraintlayout.widget.ConstraintLayout>
</androidx.core.widget.NestedScrollView>
    </androidx.coordinatorlayout.widget.CoordinatorLayout>