<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:gravity="center_vertical"
    android:paddingStart="12dp"
    android:paddingEnd="8dp"
    android:paddingVertical="8dp"
    android:layout_marginBottom="8dp"
    android:background="@drawable/rounded_bg_white"
    android:elevation="2dp">

    <ImageView
        android:id="@+id/iv_selected_equipment_icon"
        android:layout_width="24dp"
        android:layout_height="24dp"
        android:src="@drawable/ic_grinder"
        android:contentDescription="Selected Equipment Icon"
        app:tint="@color/black" />

    <TextView
        android:id="@+id/tv_selected_equipment_name"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:layout_marginStart="8dp"
        android:textColor="@color/black"
        android:textSize="14sp"
        tools:text="V60 Dripper (Hario)"
        android:singleLine="true"
        android:ellipsize="end" />

    <ImageView
        android:id="@+id/btn_delete_selected_equipment"
        android:layout_width="20dp"
        android:layout_height="20dp"
        android:layout_marginStart="8dp"
        android:src="@drawable/ic_close"
        android:contentDescription="Remove Equipment"
        app:tint="@color/black"
        android:background="?attr/selectableItemBackgroundBorderless"
        android:clickable="true"
        android:focusable="true" />

</LinearLayout>