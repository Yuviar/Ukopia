<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="36dp"
    android:layout_height="36dp"
    android:padding="2dp"> <!-- Padding di sekeliling setiap stempel -->

    <!-- Latar belakang lingkaran (akan diubah warnanya di kode) -->
<ImageView
android:id="@+id/iv_stamp_background"
android:layout_width="32dp"
android:layout_height="32dp"
android:layout_gravity="center"
android:background="@drawable/reward_circle_background_default"
android:contentDescription="@string/loyalty_stamp_desc" />

    <!-- Angka stempel -->
<TextView
android:id="@+id/tv_stamp_number"
android:layout_width="wrap_content"
android:layout_height="wrap_content"
android:layout_gravity="center"
android:textColor="@color/black"
android:textSize="12sp"
android:textStyle="bold"
tools:text="1" />

    <!-- Ikon centang (awalnya tersembunyi, akan muncul di atas lingkaran saat diisi) -->
<ImageView
android:id="@+id/iv_stamp_checkmark"
android:layout_width="24dp"
android:layout_height="24dp"
android:layout_gravity="center"
android:src="@drawable/ic_checkmark"
android:tint="@color/white"
android:visibility="gone"
android:contentDescription="@string/loyalty_stamp_desc" />

    </FrameLayout>